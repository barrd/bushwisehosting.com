/* BWH - Screen CSS - (C) Bushwise Hosting - < barrd >
--------------------------------------------------------------------*/
* {
  margin: 0;
  padding: 0;
}
body {
  background: #fff url(../imgs/shared/bgHeader.gif) repeat-x;
  text-align: justify;
  color: #4a4a4a;
}
#headLogo, #mainContWrapper, #footer {
  width: 880px;
  margin: 0 auto;
}
#headMenu a, .halfL, .halfR, .imgL, fieldset, textarea, .txtInput, button {
  -moz-border-radius: 6px;
}

/* Head Logo & Home Link
--------------------------------------------------------------------*/
#headWrapper {
  width: 100%;
  border-bottom: 2px solid #8b4d00;
}
#headLogo {
  background: #d56e22 url(../imgs/shared/bwhLogoRndl.png) no-repeat 0 19px;
  letter-spacing: 1px;
  height: 80px;
  color: #f9f9f9;
}
#headLogo h1 {
  float: left;
  margin: 30px 0 0 84px;
  font-weight: normal;
  font-size: 24px;
}
#headLogo p {
  float: left;
  padding: 28px 0 0 12px;
  font-style: italic;
}
#headLogo .logoRh {
  float: right;
  text-align: right;
  padding: 60px 0 0 0;
  color: #8b4d00;
}
.noLink, .noLink:hover {
  color: #f9f9f9;
  border: none;
}

/* Head Horiz Menu
--------------------------------------------------------------------*/
#headMenu {
  background-color: #d56e22;
  width: 880px;
  margin: 4px auto 0 auto;
  height: 36px;
}
#headMenu ul {
  list-style: none;
}
#headMenu li {
  display: inline;
}
#headMenu a {
  float: left;
  display: block;
  border: 1px solid #8b4d00;
  height: 14px;
  margin: 0 5px 0 0;
  padding: 8px 18px 8px 14px;
  text-decoration: none;
  color: #fff;
}
#headMenu .menuRh a {
  margin: 0 0 0 5px;
}
#headMenu a:hover {
  background: #fae067;
  color: #222;
}
#headMenu .menuCurrent a {
  background-color: #ed9023;
  color: #222;
}
#headMenu a:before {
  content: url(../imgs/shared/iconNavNext.png);
  margin: 0 4px 0 0;
}
#headMenu .menuCurrent a:before {
  content: url(../imgs/shared/iconNavHere.png);
  margin: 0 4px 0 0;
}
#headMenu .menuRh {
  float: right;
  text-align: right;
}

/* Main Content Area
--------------------------------------------------------------------*/
#mainCont {
  float: left;
  width: 600px;
  margin: 30px 50px 0 0;
  line-height: 20px;
}

/* Vert Right Hand Nav
--------------------------------------------------------------------*/
#vertRhNav {
  float: right;
  width: 230px;
  margin: 30px 0 0 0;
}
#vertRhNav ul {
  list-style: none;
  margin: 0 0 12px 0;
}
#vertRhNav .navHeader {
  width: 226px;
  padding: 4px 0 4px 4px;
  color: #d56e22;
  font-weight: bold;
  border-bottom: 2px solid #ed9023;
}
#vertRhNav .navHeader:before {
  content: url(../imgs/shared/iconEye.png);
  margin: 0 1px 0 0;
}
#vertRhNav li a, #vertRhNav .navCurrent  {
  display: block;
  padding: 6px 0 6px 4px;
  width: 226px;
  border-bottom: 1px dotted #ed9023;
}
#vertRhNav li a:before  {
  content: url(../imgs/shared/iconNavNext.png);
  margin: 0 5px 0 0;
}
#vertRhNav li a:hover  {
  /*background-color: #f0f0f0;*/
  color: #ed9023;
}
#vertRhNav .navCurrent {
  font-weight: bold;
  font-style: italic;
}
#vertRhNav .navCurrent:before {
  content: url(../imgs/shared/iconNavHere.png);
  margin: 0 1px 0 0;
}

/* Footer
--------------------------------------------------------------------*/
#footer {
  clear: both;
  padding: 12px 0;
  font-size: 11px;
  border-top: 2px solid #e0e0e0;
}

/* Shared Layout Classes
--------------------------------------------------------------------*/
.halfL, .halfR, .halfFL, .halfFR {
  width: 46%;
}
.halfL, .halfR {
  padding: 8px ;
  border: 2px solid #ed9023;
  margin: 6px 0;
}
.halfL, .halfFL {
  float: left;
}
.halfR, .halfFR {
  float: right;
}
.infoTbWrapper {
  width: 600px;
  border: 1px solid #8b4d00;
  margin: 18px 0 24px 0;
  -moz-border-radius-bottomleft: 6px;
  -moz-border-radius-bottomright: 6px;
}
.infoTbL, .infoTbR, .infoTbBody {
  padding: 6px;
}
.infoTbL, .infoTbR {
  background-color: #ed9023;
  border-bottom: 1px solid #8b4d00;
  color: #8b4d00;
}
.infoTbL {
  float: left;
  width: 451px;
  color: #fff;
}
.infoTbR {
  float: right;
  width: 125px;
  text-align: right;
  font-style: italic;
  color: #8b4d00;
}
.infoTbBody {
  clear: both;
}
.padBlank {
  clear: both;
  height: 12px;
}

/* Shared Text & Image Classes
--------------------------------------------------------------------*/
.shoutBoxL, .shoutBoxR {
  width: 125px;
  font: 17px 'Comic Sans MS', Arial, Helvetica, sans-serif;
  line-height: 24px;
  text-align: center;
  color: #c0c0c0;
}
.shoutBoxL {
  float: left;
  padding: 0 4px 4px 0;
}
.shoutBoxR {
  float: right;
  padding: 0 0 4px 4px;
}
.req {
  color: #1262c7;
  border-bottom: 1px solid #1262c7;
}
.txtR {
  text-align: right;
}
.smTxt {
  font-size: 10px;
  line-height: 15px;
}
.brB {
  clear: both;
}
.bgGrey {
  background-color: #f0f0f0;
}
.bgGrey b {
  color: #8b4d00;
}
.uc {
  text-transform: uppercase;
}
.uc .smTxt {
  text-transform: capitalize;
  font-style: italic;
  color: #8b4d00; /* 66c */
}
.imgL {
  float: left;
  margin: 5px 10px 4px 0;
  padding: 6px;
  border: 1px solid #777;
}
.imgL:hover {
  border: 1px solid #ed9023;
}

/* Links
--------------------------------------------------------------------*/
a, a:visited, a:active {
  color: #777;
  text-decoration: none;
  border-bottom: 1px dotted #ed9023;
}
a:hover {
  color: #ed9023;
  border-bottom: 1px solid #ed9023;
}
a img {
  filter: alpha(opacity=60);
  filter: progid:DXImageTransform.Microsoft.Alpha(opacity=60);
  -moz-opacity: 0.60;
  opacity: 0.60;
}
a:hover img { 
  filter: alpha(opacity=100);
  filter: progid:DXImageTransform.Microsoft.Alpha(opacity=100);
  -moz-opacity: 1.00;
  opacity: 1;
}
h4 a {
  border: none;
  color: #ed9023;
}

/* Typography
--------------------------------------------------------------------*/
body, select, textarea, .txtInput, button, td {
  font: 12px 'Trebuchet MS', Arial, Helvetica, sans-serif;
}
code, pre {
  font: 12px 'Courier New', Courier, monospace;
}
code {
  color: #66c;
}
h2, h3, h4, h5 {
  font-weight: normal;
  color: #d56e22;
}
#headLogo h1, h2, h3, acronym {
  letter-spacing: 1px;
}
h2 {
  font-size: 24px;
  margin: 0 0 12px 0;
}
h3 {
  font-size: 16px;
}
h4 {
  font-size: 13px;
}
h5 {
  font-size: 11px;
  margin-bottom: -14px;
}
p {
  margin: 12px 0
}
acronym {
  text-decoration: none;
  border: none;
  color: #960;
}
acronym:hover {
  cursor: help;
}
sup {
  font-size: 8px;
  color: #f00;
}
fieldset br {
  clear: both;
}

/* Lists
--------------------------------------------------------------------*/
#mainCont ul { 
  list-style-image: url(../imgs/shared/iconStar.png);
  margin: 12px 0 12px 30px;
}
ol {
  margin: 12px 0 12px 30px;
}
ol.romanL {
  list-style-type: lower-roman;
}
ol.alphaL {
  list-style-type: lower-alpha;
}
ol.padL {
  margin: 0 0 12px 60px;
}
dt {
  margin: 0 0 12px 0;
  letter-spacing: 1px;
  font-weight: bold;
  border-bottom: 1px dotted #ed9023;
}
dd {
  margin: 6px 0 6px 36px;
  padding: 0 0 4px 0;
}

/* Forms
--------------------------------------------------------------------*/
select, button, label {
  cursor: pointer;
}
fieldset {
  background-color: #f0f0f0;
  width: 100%;
  margin: 18px 0;
  padding: 24px 0 12px 12px;
  border: 1px solid #8b4d00;
}
label {
  float: left;
  width: 65px;
  text-align: right;
  margin: 0 6px 0 0;
  white-space: pre;
}
select:hover, textarea:hover, .txtInput:hover, 
select:focus, textarea:focus, .txtInput:focus {
  background-color: #ebebf3;
}
select, textarea, .txtInput {
  float: left;
  padding: 2px;
  margin: 0 6px 20px 0;
  border: 2px solid #ed9023;
  color: #222;
}
select option {
  margin: 0 4px 4px 6px;
}
textarea {
  width: 75%;
  height: 80px;
}
button { 
  background-color: #fff;
  padding: 3px 6px;
  border: 2px solid #d56e22;
  margin: 6px 20px 12px 10px;
  letter-spacing: 1px;
  font-weight: bold;
  color: #4a4a4a;
}
button:hover {
  background-color: #fae067;
  color: #222;
}
button:active {
  background-color: #de4b4b;
  color: #fff;
}

/* Tables
--------------------------------------------------------------------*/
table {
  border-collapse: collapse;
  width: 100%;
  margin: 6px 0 18px 0;
}
th, td {
  padding: 6px;
  line-height: normal;
}
th {
  border: 1px solid #ed9023;
  background-color: #ed9023;
  text-align: left;
  color: #fff;
}
td {
 border: 1px solid #c0c0c0;
}
tr.rowOdd {
  background-color: #fff;
}
tr.rowEven {
  background-color: #f0f0f0;
}
